<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/arkaplan"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@drawable/button_rounded"
        android:text="Lütfen yer seçiniz!"
        android:textSize="22sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/custom_button"
            android:text="A-1"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="28dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:checked="true"
            android:layout_toRightOf="@+id/button1"
            android:text="" />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@+id/button1"
            android:background="@drawable/custom_button"
            android:text="A-2"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="190dp"
            tools:layout_editor_absoluteY="30dp" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:checked="true"
            android:layout_toRightOf="@id/switch1"
            android:text="" />

        <Button
            android:id="@+id/button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/button1"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="A-3"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="158dp" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch1"
            android:layout_marginLeft="10dp"
            android:textOn=""
            android:checked="true"
            android:textOff="Malesef burası dolu"
            android:layout_marginTop="82dp"
            android:layout_toRightOf="@+id/button3"
            />
        <Button
            android:id="@+id/button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/button2"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/button3"
            android:background="@drawable/custom_button"
            android:text="A-4"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="162dp" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch2"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="82dp"
            android:layout_toRightOf="@id/switch3"
            android:checked="true"
            android:text="" />

        <Button
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/button3"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="A-5"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="295dp" />

        <Switch
            android:id="@+id/switch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch3"
            android:checked="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="82dp"
            android:layout_toRightOf="@+id/button5"
            android:text="" />
        <Button
            android:id="@+id/button6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/button4"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/button5"
            android:background="@drawable/custom_button"
            android:text="A-6"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="303dp" />
        <Switch
            android:id="@+id/switch6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/switch4"
            android:layout_marginTop="82dp"
            android:checked="true"
            android:layout_toRightOf="@id/switch5"
            android:text="" />
        <Button
            android:id="@+id/button7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/button5"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="A-7"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="416dp" />
        <Switch
            android:id="@+id/switch7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch5"
            android:layout_marginTop="82dp"
            android:checked="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/button7"
            android:text="" />
        <Button
            android:id="@+id/button8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/button6"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/button7"
            android:background="@drawable/custom_button"
            android:text="A-8"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="416dp" />
        <Switch
            android:id="@+id/switch8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switch6"
            android:layout_marginTop="82dp"
            android:checked="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/switch7"
            android:text="" />

    </RelativeLayout>

</LinearLayout>